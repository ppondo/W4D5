<h1>Sign Up</h1>

<form action="<%= users_url %>" method="POST">
  <input type="hidden" 
         name="authenticity_token" 
         value="<%= form_authenticity_token %>">

  <label for="name">Name</label>
  <input type="text" 
         name="user[name]"
         id="name"
         value="<%= @user.name %>">

  <label for="password">Password</label>
  <input type="password"
         name="user[password]"
         id="password"
         value = "">

  <input type="submit"
         value="Sign Up">
</form>